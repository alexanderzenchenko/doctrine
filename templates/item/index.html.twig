{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>List items</h1>
            sort by:
            <a href="{{ path('item_index', {page: '1', sort: 'name'}) }}">Name</a>
            <a href="{{ path('item_index', {page: '1', sort: 'description'}) }}">Description</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.name }}</td>
                        <td>{{ item.description }}</td>
                        <td>{{ item.price }}</td>
                        <td>
                            <a href="{{ path('item_show', {'id': item.id}) }}">show</a>
                            <a href="{{ path('item_edit', {'id': item.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('item_new') }}">Create new</a>
        </div>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {% for page in 1..pagesCount %}
                <li class="page-item"><a class="page-link" href="{{ path('item_index', {page: page, sort: sortBy}) }}">{{ page }}</a></li>
            {% endfor %}
        </ul>
    </nav>
{% endblock %}
